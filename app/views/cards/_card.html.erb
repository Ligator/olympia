<div class="card p-5" style="max-width: 550px; min-width: 150px;">
  <div class="row">
    <div class="col-md-6">
      <h4>Numero</h4>
    </div>
    <div class="col-md-6">
      <%= card.number_card %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h4>Banco</h4>
    </div>
    <div class="col-md-6">
      <%= card.name_bank %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h4>Titular</h4>
    </div>
    <div class="col-md-6">
      <%= card.titular_name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h4>Vencimiento</h4>
      <%= card.expiration_date %>
    </div>
  </div>
  <td>
    <%= link_to 'Edit', edit_card_path(card), class: "btn btn-warning m-2", :remote=>true %>
    <%= link_to 'Destroy', card, class: "btn btn-danger m-2", method: :delete, data: { confirm: 'Are you sure?' }, :remote=>true %>
  </td>
</div>
