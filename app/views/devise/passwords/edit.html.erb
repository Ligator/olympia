
<div class="col-11 mx-auto col-sm-9">
  <div class="row justify-content-md">
    <h2><%= t("devise.passwords.edit.change_your_password")%></h2>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-group">
      <%= f.label :password,t("devise.passwords.edit.new_password") %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t(:characters_minimum) %>)</em>
      <% end %>
      <%= f.password_field :password,class: "justify-content form-control", autocomplete: "new-password" %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, t("devise.passwords.edit.confirm_new_password")%>
      <%= f.password_field :password_confirmation,class: "justify-content form-control", autocomplete: "new-password" %>
    </div>
    <div class=" field justify-content">
      <div class="actions">
        <%= f.submit t("devise.passwords.edit.change_my_password")%>
      </div>
    </div>
  <% end %>

  <div class="field  justify-content">
    <%= render "devise/shared/links" %>
  </div>
</div>



