<div class="col-11 mx-auto col-sm-9">
  <div class="row justify-content-md">
    <h2><%= t("devise.passwords.new.forgot_your_password") %></h2>
  </div>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :email, t("activerecord.attributes.user.email")%>
      <%= f.email_field :email, class: "justify-content form-control", autofocus: true, autocomplete: "email" %>
    </div>
    <div class=" field justify-content">
      <div class="actions">
        <%= f.submit t("devise.passwords.new.send_me_reset_password_instructions"), class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>
  <div class="field  justify-content">
    <%= render "devise/shared/links" %>
  </div>
</div>

