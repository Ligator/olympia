
<div class="col-11 mx-auto col-sm-9">
  <div class="row justify-content-md">
    <h2>Log in</h2>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "justify-content form-control", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password,class: "justify-content form-control", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class=" field justify-content">
      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    </div>
  <% end %>

  <div class="field  justify-content">
    <%= render "devise/shared/links" %>
  </div>
</div>


