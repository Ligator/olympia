<div class="card col-11 mx-auto col-sm-9 mb-4 pt-4 pb-4">
  <div class="col-11 mx-auto col-sm-9">
    <div class="row justify-content-md">
      <h2> <%= t("devise.registrations.edit.title",resource: resource_name.to_s.humanize) %></h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group">
        <%= f.file_field :avatar %>
      </div>
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "justify-content form-control", autofocus: true, autocomplete: "first_name" %>
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "justify-content form-control", autofocus: true, autocomplete: "last_name" %>
      </div>
      <div class="form-group">
        <%= f.label :email, t("activerecord.attributes.user.email") %>
        <%= f.email_field :email, class: "justify-content form-control", autofocus: true, autocomplete: "email" %>
        <%= f.label :phone %>
        <%= f.text_field :phone, class: "justify-content form-control", autofocus: true, autocomplete: "phone" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>
          <%= t("devise.registrations.edit.currently_waiting_confirmation_for_email",resource: resource.unconfirmed_email) %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :password %><i> (<%= t("devise.registrations.edit.leave_blank_if_you_don_t_want_to_change_it")%>)</i>
        <%= f.password_field :password,class: "justify-content form-control", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <em><%= t("devise.shared.minimum_password_length.other", count: @minimum_password_length) %></em>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation,class: "justify-content form-control", autocomplete: "new-password" %>
      </div>

      <%= fields_for :address, resource.address do |address| %>
        <div class="row">
          <div class="col-sm col-md p-2">
            <%= address.text_field :street,class: "form-control", placeholder: "Calle", id: "validationTooltip09"%>
          </div>
          <div class="col-sm col-md p-2">
           <%= address.text_field :number,class: "form-control", placeholder: "NÃºmero"%>
          </div>
          <div class="col-sm col-md p-2">
           <%= address.text_field :postal_code,class: "form-control", placeholder: "C.P."%>
          </div>
        </div>
        <div class="row">
          <div class="col-sm col-md p-2">
            <%= address.text_field :colony,class: "form-control", placeholder: "Colonia", id: "validationTooltip10"%>
          </div>
        </div>
        <div class="row">
          <div class="col-sm col-md p-2">
            <%= address.text_field :city,class: "form-control", placeholder: "Ciudad", id: "validationTooltip11"%>
          </div>
          <div class="col-sm col-md p-2">
            <%= address.text_field :state,class: "form-control", placeholder: "Estado", id: "validationTooltip12"%>
          </div>

        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :current_password %> <i>
          (<%= t("devise.registrations.edit.we_need_your_current_password_to_confirm_your_changes") %>)</i>
        <%= f.password_field :current_password,class: "justify-content form-control", autocomplete: "new-password" %>
      </div>
      <div class=" field justify-content">
        <div class="actions">
          <%= f.submit t("devise.registrations.edit.update"), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>


    <h3><%= t("devise.registrations.edit.cancel_my_account")%></h3>

    <div class="field  justify-content">

    <p><%= t("devise.registrations.edit.unhappy")%>
      <%= button_to t("devise.registrations.edit.cancel_my_account"), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to t("devise.shared.links.back"), :back %>

    </div>
  </div>
</div>
