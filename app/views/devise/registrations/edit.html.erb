
<div class="col-11 mx-auto col-sm-9">
  <div class="row justify-content-md">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "justify-content form-control", autofocus: true, autocomplete: "first_name" %>
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "justify-content form-control", autofocus: true, autocomplete: "last_name" %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: "justify-content form-control", autofocus: true, autocomplete: "email" %>
      <%= f.label :phone %>
      <%= f.text_field :phone, class: "justify-content form-control", autofocus: true, autocomplete: "phone" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="form-group">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password,class: "justify-content form-control", autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation,class: "justify-content form-control", autocomplete: "new-password" %>
    </div>
    <div class="form-group">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password,class: "justify-content form-control", autocomplete: "new-password" %>
    </div>
    <div class=" field justify-content">
      <div class="actions">
        <%= f.submit "Update" %>
      </div>
    </div>
  <% end %>


  <h3>Cancel my account</h3>

  <div class="field  justify-content">

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>

  </div>


