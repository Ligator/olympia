<h2>Store: <%= @store.name %> </h2>
<p>
  <strong>Name:</strong>
  <%= @store.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @store.description %>
</p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price in cents</th>
      <th>Size</th>
      <th>Quantity</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @store.products %>
  </tbody>
</table>

<br>

<%= link_to 'Back', stores_path %> |
<% if current_user.present? && current_user.store.eql?(@store) %>
  <%= link_to 'Edit', edit_store_path(@store) %> |
  <%= link_to 'New Product', new_store_product_path(@store) %>
<% end %>
