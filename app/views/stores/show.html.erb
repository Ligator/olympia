<h2>Store: <%= @store.name %> </h2>
<p>
  <strong>Name:</strong>
  <%= @store.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @store.description %>
</p>

<h1>Products</h1>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
      <%= render @store.products %>
    </div>

<br>

<%= link_to 'Back', stores_path %> |
<% if user_signed_in? && current_user.store.eql?(@store) %>
  <%= link_to 'Edit', edit_store_path(@store) %> |
  <%= link_to 'New Product', new_store_product_path(@store) %>
<% end %>
