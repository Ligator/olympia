<div class="container">
  <h3>Store:</h3>
    <div class="form-group">
      <h1><%= @store.name %> </h1>
    </div>

    <div class="form-group">
      Description:
      <h2>
        <%= @store.description %>
      </h2>
    </div>

    <h1>Products</h1>

    <table class="row align-items-center offset-md-1 col-md-10 col-sm-12">
      <thead class="col" >
        <tr class="table_head align-content-center ">
          <th class="column-1 col"></th>
          <th class="column-2 col">Name <%= link_to '',order_product_by_name_path(store_id: @store.id, flag_order: @flag_order_product), type: "button", class: "btn btn-secondary", method: :post, :remote=>true %> </th>
          <th class="column-3 col">Description</th>
          <th class="column-4 col">Price in cents</th>
          <th class="column-5 col">Size</th>
          <th class="column-6 col">Quantity</th>
          <th class="column-7 col">Store</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="row align-items-center offset-md-1 col-md-10 col-sm-12">
        <div class="products_content">
          <%= render @store.products %>
        </div>
      </tbody>
    </table>

    <br>

    <%= link_to 'Back', stores_path %> |
    <% if user_signed_in? && current_user.store.eql?(@store) %>
      <%= link_to 'Edit', edit_store_path(@store) %> |
      <%= link_to 'New Product', new_store_product_path(@store) %>
    <% end %>

</div>
