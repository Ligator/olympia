<div class="card m-5 bg-light rounded pt-2 pb-2">
  <h3 class="d-flex justify-content-center mt-2">
    Ventas
  </h3>
  <div class="card container col-xs col-sm col-md col-lg-10 mt-3 mb-3 p-4">
    <div class="row text-black d-flex justify-content-end pr-5 font-weight-bolder"> Orden: <%= @order.id %> </div>
    <table class="table table-hover table-responsive-lg">
      <thead class="text-black">
          <tr >
            <th scope="col">Fecha</th>
            <th scope="col">Producto</th>
            <th scope="col">Descripci√≥n</th>
            <th scope="col">Precio</th>
            <th scope="col">Talla</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Tienda</th>
          </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
          <tr >
            <td><%= order_item.created_at.to_date %></td>
            <td><%= order_item.name %></td>
            <td><%= order_item.description %></td>
            <td><%= number_to_currency order_item.product.full_price(@currency), locale: @currency %></td>
            <td><%= order_item.size %></td>
            <td><%= order_item.quantity %></td>
            <td><%= order_item.product.store.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
