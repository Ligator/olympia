<div id="new-product--modal" class="modal" tabindex="-1">
  <div class="modal-dialog modal-lg" id="edit_profile--modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Nuevo Producto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: [ @store, @product], local: false do |form| %>
        <div class="modal-body product_form_content">
          <%= render "product_form_content", form: form %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= form.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
