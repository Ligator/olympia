<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

    <ul>
      <% @product.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-6 col-12">
    <div class="form-group">
      <%= form.label :images, "Fotos", class: "col-form-label" %>
      <div>
        <%= form.file_field :images, multiple: true, class: 'form-control-file', direct_upload: true %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :name, "Nombre del Producto", class: "col-form-label" %>
      <div>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, "Detalles del Producto", class: "col-form-label" %>
      <div>
        <%= form.text_field :description, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :size, "Talla", class: "col-form-label" %>
      <%= form.text_field :size, class: 'form-control' %>
    </div>

    <!-- Inventario -->
    <div class="form-group">
      <%= form.label :price_in_cents, "Precio", class: "col-form-label" %>
      <div>
        <%= form.text_field :price_in_cents, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :quantity, "Cantidad disponible", class: "col-form-label" %>
      <div>
        <%= form.text_field :quantity, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-12">
    <!-- Package -->
    <div class="form-group">
      <%= form.label :weight, "Peso en Kilogramos (Kg)", class: "col-form-label" %>
      <%= form.text_field :weight, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :height, "Altura en centímetros (cm)", class: "col-form-label" %>
      <%= form.text_field :height, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :width, "Ancho en centímetros (cm)", class: "col-form-label" %>
      <%= form.text_field :width, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :length, "Largo en centímetros (cm)", class: "col-form-label" %>
      <%= form.text_field :length, class: 'form-control' %>
    </div>
  </div>
</div>
