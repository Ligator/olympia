<div id="edit-product--modal" class="modal" tabindex="-1">
  <div class="modal-dialog" id="edit--modal-dialog">
    <div class="modal-content pl-5 pr-5 pb-5">
      <div class="modal-header">
        <h5 class="modal-title">Editar Producto</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with model: [ @store, @product], local: false do |form| %>
        <div class="modal-body">
          <% if @product.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

              <ul>
                <% @product.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= form.label :images, class: "p-2 " %>
          <%= form.file_field :images, multiple: true, class: 'form-control', direct_upload: true %>

          <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name, required: :value %>
          </div>

          <div class="field">
            <%= form.label :description %>
            <%= form.text_field :description, required: :value %>
          </div>

          <div class="field">
            <%= form.label :price_in_cents %>
            <%= form.number_field :price_in_cents, required: :value %>
          </div>

          <div class="field">
            <%= form.label :size %>
            <%= form.text_field :size, required: :value %>
          </div>

          <div class="field">
            <%= form.label :quantity %>
            <%= form.number_field :quantity, required: :value %>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= form.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
