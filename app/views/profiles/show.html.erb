
<div class="d-flex justify-content-center p-3">
  <div class="card col-xs col-sm-10 col-md-10 col-lg-12" style="max-width: 800px;">
    <h3 class="card-title d-flex justify-content-center mt-3"><%=%></h3>
    <div class="row no-gutters d-flex justify-content-center mb-2">
      <div class="col d-flex align-items-center justify-content-center col-xs col-sm col-md-10 col-lg-6">
        <div class="d-flex align-items-center" style="max-width: 200px;">
          <% if current_user.avatar.present? %>
            <% if Rails.env.production? %>
              <%= cl_image_tag current_user.avatar.key, class: "card-img-top rounded-circle", style: "min-width: 50px;" %>
            <% else %>
              <%= image_tag current_user.avatar, class: "card-img-top rounded-circle", style: "min-width: 50px;" %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col d-flex align-items-center justify-content-center col-xs col-sm-12 col-md-10 col-lg-6">
        <div class="card p-3">
            <table class="table table-striped ">
              <tbody>
                <tr>
                  <th scope="row">Nombre(s):</th>
                  <td><%= current_user.first_name %></td>
                </tr>
                <tr>
                  <th scope="row">Apellidos:</th>
                  <td><%= current_user.last_name %></td>
                </tr>
                <tr>
                  <th scope="row">Teléfono:</th>
                  <td><%= current_user.phone %></td>
                </tr>
                <tr>
                  <th scope="row">Correo:</th>
                  <td><%= current_user.email %></td>
                </tr>
                  <tr>
                    <th scope="row">Tienda</th>
                    <td><%= current_user.store.name %></td>
                  </tr>
              </tbody>
            </table>
        </div>
      </div>
    </div>
      <% if current_user.address.present? %>
        <div class="card mt-2 p-3 mb-4">
          <h3 class="card-title d-flex justify-content-center">Domicilio</h3>
          <table class="table table-striped">
            <tbody class="text-center">
              <tr>
                <td><%= current_user.address.street %></td>
                <td><%= current_user.address.number %></td>
                <td><%= current_user.address.colony %></td>
              </tr>
              <tr>
                <th scope="row">Calle</th>
                <th scope="row">Número </th>
                <th scope="row">Colonia</th>

              </tr>
              <tr>
                <td><%= current_user.address.postal_code %></td>
                <td><%= current_user.address.city %></td>
                <td><%= current_user.address.state %></td>
              </tr>
              <tr>
                <th scope="row">C.P.</th>
                <th scope="row">Ciudad</th>
                <th scope="row">Estado</th>
              </tr>
            </tbody>
          </table>
        </div>
      <% end %>
    <div class="d-flex justify-content-center mb-3">
      <%= link_to "Editar", user_edit_path,  type: "button", class: "btn btn-success col-6", :remote=>true %>
    </div>
  </div>
</div>

<div id="edit-profile" style="display:none;"></div>
